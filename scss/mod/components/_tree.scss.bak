@import '../util';
@import 'compass/utilities';
@import '../var';
@import "../sprite";
.hide {
  display: none;
}
.show {
  display: block;
}
.level {
  text-align: left;
  font-color: #9B9B9B;
  position: relative;
  cursor: pointer;
  // padding-bottom: 17px;
}
.level-1 {
  padding-top: 10px;
  padding-left: 10px;
}
.level-node {
  font-size: 14px;
  color: #363636;
  position: relative;
  padding-left: 10px;
  @include font-size($base_size * 1.4);
  div {
    display: inline-table;
    vertical-align: middle;
  }
  .hollow {
    border: 6px solid #000;
    border-color: transparent;
    position: absolute;
  }
  .icon-margin {
    margin-left: -3px;
  }
  .node-text-cls {
    color: #363636;
    .node-account {
      color: #b8b8b8;
    }
  }
  .icon {
    @include inline-block();
    width: 16px;
    height: 16px;
    float: right;
    margin: 5px 12px 0 0;
    margin-right: 12px;
    background-image: sprite-url($icon);
  }
  .icon-uncheckbox {
    background-position: sprite-position($icon, unselected);
  }
  .icon-checkbox {
    background-position: sprite-position($icon, selected);
  }
}
.hollowCollapse {
  .icon-arrow-in {
    border-color: transparent transparent transparent #757575;
    top: 8px;
    left: 0;
  }
  .icon-arrow-out {
    border-color: transparent transparent transparent #fff;
    top: 8px;
    left: -2px;
  }
}
.hollowExpand {
  .icon-arrow-in {
    border-color: #757575 transparent transparent transparent;
    top: 11px;
    left: -5px;
  }
  .icon-arrow-out {
    border-color: #fff transparent transparent transparent;
    top: 9px;
    left: -5px;
  }
}
.sub-levels {
  // margin-top: 20px;
  padding: 0 0 0 18px;
}
